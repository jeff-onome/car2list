{
  "rules": {
    "cars": {
      ".read": true,
      ".write": true,
      ".indexOn": [
        "dealerId",
        "isFeatured",
        "type",
        "listingType",
        "createdAt"
      ]
    },
    "users": {
      ".read": true,
      ".write": true,
      "$user_id": {
        ".indexOn": ["email", "role"]
      }
    },
    "config": {
      ".read": true,
      ".write": true
    },
    "notifications": {
      ".read": true,
      ".write": true
    },
    "purchases": {
      ".read": true,
      ".write": true
    },
    "bookings": {
      ".read": true,
      ".write": true
    }
  }
}