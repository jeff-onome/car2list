
{
  "rules": {
    "cars": {
      ".read": true,
      ".write": true,
      ".indexOn": [
        "dealerId",
        "isFeatured",
        "type",
        "listingType",
        "createdAt"
      ]
    },
    "users": {
      ".read": true,
      ".write": true,
      "$user_id": {
        ".indexOn": ["email", "role"]
      }
    },
    "config": {
      ".read": true,
      ".write": true
    },
    "notifications": {
      ".read": true,
      ".write": true
    },
    "rentals": {
      ".read": true,
      ".write": true,
      ".indexOn": ["userId", "dealerId", "createdAt"]
    },
    "payments": {
      ".read": true,
      ".write": true,
      ".indexOn": ["userId", "createdAt"]
    },
    "purchases": {
      ".read": true,
      ".write": true
    },
    "bookings": {
      ".read": true,
      ".write": true
    },
    "contact_messages": {
      ".read": true,
      ".write": true
    },
    "broadcast_history": {
      ".read": true,
      ".write": true,
      ".indexOn": ["timestamp", "target"]
    },
    "direct_message_history": {
      ".read": true,
      ".write": true,
      ".indexOn": ["timestamp", "recipientId"]
    }
  }
}
